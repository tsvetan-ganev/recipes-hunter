<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Custom application styles -->
    <style name="FragmentContainer">
    </style>

    <!--Fix for FAB margins bug-->
    <style name="floating_action_button">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="TextDisplay3">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">56sp</item>
    </style>

    <style name="TextDisplay2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">45sp</item>
    </style>

    <style name="TextDisplay1">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextHeadline">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextSubheading">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBody">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="TextDisplay1.Dark">
        <item name="android:color">#83000000</item>
    </style>

    <style name="TextDisplay2.Dark">
        <item name="android:color">#83000000</item>
    </style>

    <style name="TextDisplay3.Dark">
        <item name="android:color">#83000000</item>
    </style>

    <style name="TextHeadline.Dark">
        <item name="android:color">#EE000000</item>
    </style>

    <style name="TextTitle.Dark">
        <item name="android:color">#DE000000</item>
    </style>

    <style name="TextBody.Dark">
        <item name="android:color">#DE000000</item>
    </style>

    <style name="TextSubheading.Dark">
        <item name="android:color">#DE000000</item>
    </style>

    <style name="TextDisplay1.Light">
        <item name="android:textColor">#F4F4F4</item>
    </style>

    <style name="TextDisplay2.Light">
        <item name="android:textColor">#F4F4F4</item>
    </style>

    <style name="TextDisplay3.Light">
        <item name="android:textColor">#F4F4F4</item>
    </style>

    <style name="TextHeadline.Light">
        <item name="android:textColor">#F4F4F4</item>
    </style>

    <style name="TextTitle.Light">
        <item name="android:textColor">#F4F4F4</item>
    </style>

    <style name="TextBody.Light">
        <item name="android:textColor">#E3E3E3</item>
    </style>

    <style name="TextSubheading.Light">
        <item name="android:textColor">#C6C6C6</item>
    </style>

    <style name="HorizontalLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="HorizontalLine.Dark">
        <item name="android:background">#4D000000</item>
    </style>

</resources>
